.section{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-content: center;
  margin-top: 50rpx;
  /*margin-bottom: 50rpx;*/
}
.music_title{
  font-family: '黑体';
  font-size: 24px;
}
.music_search{
  margin-bottom: 50rpx;
}
.music_name{
  border: 2px #ddd solid;
  border-radius: 4px;
  height: 100%;
  padding: 10px;
  font-family: "Microsoft Yahei";
}
.music_img{
  width: 100%;
  height: 100%;
  margin-bottom: 50rpx;
}
.music_img image{
  border-radius: 50%;
  /*height: 100%;*/
}
